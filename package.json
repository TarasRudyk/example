{
  "name": "Karma",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "pretest": "eslint . --ext .jsx,.js --quiet",
    "lint": "eslint . --ext .jsx,.js; true"
  },
  "pre-commit": [
    "pretest"
  ],
  "dependencies": {
    "bcrypt": "^0.8.7",
    "immutable": "^3.8.1",
    "lodash": "^4.16.4",
    "meteor-node-stubs": "~0.2.0",
    "moment": "^2.16.0",
    "react": "^15.3.2",
    "react-addons-pure-render-mixin": "^15.3.2",
    "react-autocomplete": "^1.4.0",
    "react-bootstrap": "^0.30.6",
    "react-click-outside": "^2.2.0",
    "react-confirm": "^0.1.14",
    "react-datetime": "^2.6.2",
    "react-delete-confirm": "^1.0.1",
    "react-dom": "^15.3.2",
    "react-mounter": "^1.2.0",
    "react-notification": "^6.3.0",
    "react-tabs": "^0.8.2",
    "string-format-validation": "^2.0.2",
    "sweetalert": "^1.1.3",
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.3.0",
    "js-md5": "^0.4.1",
    "pre-commit": "^1.1.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "meteor/no-session": 0,
      "space-before-function-paren": "error",
      "no-underscore-dangle": 0,
      "new-cap": 0,
      "import/no-absolute-path": 0,
      "import/prefer-default-export": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "react-in-jsx-scope": 0,
      "react/jsx-filename-extension": 0,
      "react/jsx-wrap-multilines": 0,
      "react/forbid-prop-types": 0,
      "class-methods-use-this": 0,
      "object-shorthand": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": [
        "error",
        "never"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  }
}
